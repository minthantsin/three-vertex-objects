{
  "name": "three-tiled-maps",
  "version": "0.0.1",
  "description": "tiled maps renderer framework based upon three.js and three-vertex-objects",
  "main": "build/three-tiled-maps.umd.js",
  "module": "build/three-tiled-maps.js",
  "exports": "./build/three-tiled-maps.js",
  "types": "./build/types/index.d.ts",
  "scripts": {
    "build:js": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.esm.js",
    "watch:js": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.umd.js",
    "watch:umd": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.umd.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "build": "run-s --silent build:js build:umd build:types",
    "clean": "rimraf -r build types",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s --silent --print-label eslint:fix prettier:write",
    "test": "cross-env NODE_ENV=test jest"
  },
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "Apache-2.0",
  "dependencies": {
    "three": "^0.131.3",
    "three-vertex-objects": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.2",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/assert": "^1.5.5",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.12",
    "@types/sinon": "^10.0.2",
    "@types/three": "^0.130.1",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "core-js": "^3.16.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-problems": "^5.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
