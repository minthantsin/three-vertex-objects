{
  "name": "@spearwolf/display3",
  "version": "0.0.1",
  "description": "a display for your three.js app",
  "main": "build/display3.umd.js",
  "module": "build/display3.js",
  "types": "build/types/index.d.ts",
  "exports": {
    "import": "./build/display3.js",
    "require": "./build/display3.umd.js"
  },
  "sideEffects": false,
  "rollupBuild": {
    "outputDir": "build",
    "outputName": "display3",
    "externals": [
      "@spearwolf/eventize",
      "@spearwolf/stage25",
      "@spearwolf/vertex-objects",
      "three"
    ],
    "esm": {
      "buildName": "es2017"
    },
    "umd": {
      "name": "display3",
      "buildName": "umd",
      "globals": {
        "three": "THREE",
        "@spearwolf/eventize": "eventize",
        "@spearwolf/vertex-objects": "vertexObjects",
        "@spearwolf/stage25": "stage25"
      }
    }
  },
  "homepage": "https://github.com/spearwolf/three-vertex-objects/",
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/three-vertex-objects.git"
  },
  "bugs": {
    "url": "https://github.com/spearwolf/three-vertex-objects/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "scripts": {
    "build:js": "cross-env NODE_ENV=production rollup -c ../../shared-rollup-build/rollup.config.esm.js",
    "watch:js": "cross-env NODE_ENV=production rollup -w -c ../../shared-rollup-build/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=production rollup -c ../../shared-rollup-build/rollup.config.umd.js",
    "watch:umd": "cross-env NODE_ENV=production rollup -w -c ../../shared-rollup-build/rollup.config.umd.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "watch": "concurrently --restart-tries -1 --restart-after 1 --names display3:js,display3:types yarn:watch:js yarn:watch:types",
    "build": "run-s --silent build:js build:umd build:types",
    "clean": "rimraf -r build types",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s --silent --print-label prettier:write eslint:fix",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests"
  },
  "peerDependencies": {
    "@spearwolf/eventize": "^2.0.0-beta.2",
    "@spearwolf/vertex-objects": "*",
    "three": "^0.142.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@spearwolf/vertex-objects": "workspace:*",
    "@types/assert": "^1.5.6",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/sinon": "^10.0.12",
    "@types/three": "^0.141.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "concurrently": "^7.2.2",
    "core-js": "^3.23.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-problems": "^6.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^28.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^14.0.0",
    "three": "^0.142.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.18",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@spearwolf/eventize": "^2.0.0-beta.2"
  }
}
