{
  "name": "@spearwolf/textured-sprites",
  "version": "0.0.1",
  "description": "textured 2d sprites for three.js",
  "main": "build/textured-sprites.umd.js",
  "module": "build/textured-sprites.js",
  "types": "build/types/index.d.ts",
  "exports": {
    "import": "./build/textured-sprites.js",
    "require": "./build/textured-sprites.umd.js"
  },
  "sideEffects": false,
  "rollupBuild": {
    "outputDir": "build",
    "outputName": "textured-sprites",
    "externals": [
      "@spearwolf/stage25",
      "@spearwolf/tiled-maps",
      "@spearwolf/vertex-objects",
      "three"
    ],
    "esm": {
      "buildName": "es2017"
    },
    "umd": {
      "name": "texturedSprites",
      "buildName": "umd",
      "globals": {
        "@spearwolf/eventize": "eventize",
        "three": "THREE",
        "@spearwolf/vertex-objects": "vertexObjects",
        "@spearwolf/stage25": "stage25",
        "@spearwolf/tiled-maps": "tiledMaps"
      }
    }
  },
  "homepage": "https://github.com/spearwolf/three-vertex-objects/",
  "repository": {
    "type": "git",
    "url": "https://github.com/spearwolf/three-vertex-objects.git"
  },
  "bugs": {
    "url": "https://github.com/spearwolf/three-vertex-objects/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "scripts": {
    "build:js": "cross-env NODE_ENV=production rollup -c ../../shared-rollup-build/rollup.config.esm.js",
    "watch:js": "cross-env NODE_ENV=production rollup -w -c ../../shared-rollup-build/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=production rollup -c ../../shared-rollup-build/rollup.config.umd.js",
    "watch:umd": "cross-env NODE_ENV=production rollup -w -c ../../shared-rollup-build/rollup.config.umd.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "watch": "concurrently --restart-tries -1 --restart-after 1 --names textured-sprites:js,textured-sprites:types yarn:watch:js yarn:watch:types",
    "build": "run-s --silent build:js build:umd build:types",
    "clean": "rimraf -r build types",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s --silent --print-label prettier:write eslint:fix",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests"
  },
  "peerDependencies": {
    "@spearwolf/vertex-objects": "*",
    "three": "^0.140.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@spearwolf/vertex-objects": "workspace:*",
    "@types/assert": "^1.5.6",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.34",
    "@types/sinon": "^10.0.11",
    "@types/three": "^0.140.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "concurrently": "^7.2.0",
    "core-js": "^3.22.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-problems": "^6.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "jest": "^28.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.73.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^14.0.0",
    "three": "^0.140.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  }
}
