{
  "name": "three-vertex-objects",
  "version": "0.0.1",
  "description": "three-vertex-objects",
  "main": "build/three-vertex-objects.umd.js",
  "module": "build/three-vertex-objects.js",
  "exports": "./build/three-vertex-objects.js",
  "types": "./build/types/index.d.ts",
  "scripts": {
    "build:js": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.esm.js",
    "watch:js": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.esm.js",
    "build:umd": "cross-env NODE_ENV=production rollup -c ./rollup/rollup.config.umd.js",
    "watch:umd": "cross-env NODE_ENV=production rollup -w -c ./rollup/rollup.config.umd.js",
    "build:types": "tsc --emitDeclarationOnly",
    "watch:types": "tsc --emitDeclarationOnly --watch",
    "analyze:js": "source-map-explorer build/three-vertex-objects.js",
    "analyze:umd": "source-map-explorer build/three-vertex-objects.umd.js",
    "build": "run-s --silent build:js build:umd build:types",
    "clean": "rimraf -r build types",
    "eslint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "fix": "run-s --silent --print-label eslint:fix prettier:write",
    "docs": "yarn typedoc",
    "test": "cross-env NODE_ENV=test jest"
  },
  "author": "Wolfger Schramm <wolfger@spearwolf.de>",
  "license": "Apache-2.0",
  "peerDependencies": {
    "three": "^0.131.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@types/sinon": "^10.0.3",
    "@types/three": "^0.132.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "core-js": "^3.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-problems": "^5.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.57.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^11.1.2",
    "source-map-explorer": "^2.5.2",
    "three": "^0.132.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.4",
    "typescript": "^4.4.3"
  }
}
